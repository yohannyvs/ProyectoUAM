@model PIV_PF_ProyectoFinal.CLIENTES

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-bg-dark p-3">
    <h3>Crear Clientes</h3>
</div>
    <link rel="stylesheet" type="text/css" href="~/Content/estilos.css" />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
           
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NombreCliente, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreCliente, new { htmlAttributes = new { @class = "p-3 mb-2 bg-dark text-white" } })
                    @Html.ValidationMessageFor(model => model.NombreCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CorreoElectronico, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "p-3 mb-2 bg-dark text-white" } })
                    @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink(" ", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
