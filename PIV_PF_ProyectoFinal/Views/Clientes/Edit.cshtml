@model PIV_PF_ProyectoFinal.CLIENTES

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div class="text-bg-dark p-3">
    <h3>Editar Clientes</h3>
  </div>
<link rel="stylesheet" type="text/css" href="~/Content/estilos.css" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-white bg-dark" })
        @Html.HiddenFor(model => model.IdCliente)

        <div class="form-group">
            @Html.LabelFor(model => model.NombreCliente, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreCliente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreCliente, "", new { @class = "text-white bg-dark" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CorreoElectronico, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-white bg-dark" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 offset-sm-2">

                <input type="submit" value="Guardar Cambios" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
